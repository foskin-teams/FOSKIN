<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.remainders.RemaindersActivity">

    <!-- Time Picker for selecting alarm time -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="clock"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dering Sound selection -->
    <TextView
        android:id="@+id/textSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nada dering"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerSound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSound"
        android:layout_marginTop="8dp"/>

    <!-- Repeat option -->
    <TextView
        android:id="@+id/textRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulangi"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSound"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerRepeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRepeat"
        android:layout_marginTop="8dp"/>

    <!-- Vibrate option -->
    <CheckBox
        android:id="@+id/checkVibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getar saat alarm berbunyi"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRepeat"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Delete after ringing option -->
    <CheckBox
        android:id="@+id/checkDeleteAfterRinging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hapus setelah berbunyi"
        app:layout_constraintTop_toBottomOf="@+id/checkVibrate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Label input -->
    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/checkDeleteAfterRinging"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLabel"/>

    <!-- Save button -->
    <Button
        android:id="@+id/buttonSaveAlarm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan Alarm"
        app:layout_constraintTop_toBottomOf="@+id/editLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>