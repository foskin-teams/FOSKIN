<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@android:color/white"
    tools:context=".ui.Auth.OtpVerificationActivity">

    <ImageView
        android:id="@+id/backButtonOtp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:src="@drawable/back_arrow_black"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/otpTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:text="OTP Verification"
        android:textColor="@android:color/black"
        android:textSize="33sp" />

    <TextView
        android:id="@+id/otpSubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:text="We already sent you a verification code."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <EditText
            android:id="@+id/otpBox1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/otpBox2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/otpBox3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/otpBox4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/otpBox5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/otpBox6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/otp_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/otpErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Invalid Verification Code"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/resendCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Don't receive a code? Resend"
        android:textSize="14sp" />


</LinearLayout>